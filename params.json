{
    "dataloader": {
                        "data_dir": ".data",
                        "batch_size": 256,
                        "shuffle": true,
                        "num_workers": 4,
                        "pin_memory": true,
                        "max_len":  120
                    },

    "model": {
                        "num_classes": 17930,
                        "in_channels": 22,
                        "conv_channels": 128,
                        "conv_kernel_size": 1,
                        "conv_padding": 0,
                        "bias": false,
                        "num_residual_blocks": 2,
                        "residual_blocks_kernel_size": 3,
                        "residual_blocks_bias": false,
                        "residual_blocks_dilation": 1,
                        "residual_blocks_padding": 1,
                        "pool_kernel_size": 3,
                        "pool_stride": 2,
                        "pool_padding": 1,
                        "lr": 0.00001,
                        "weight_decay": 0.01,
                        "scheduler_milestones": [5, 8, 10, 12, 14, 16, 18, 20],
                        "scheduler_gamma": 0.9
                    },

    "trainer": {
                        "accelerator": "auto",
                        "max_epochs": 5,
                        "devices": 1,
                        "precision": "16",
                        "model_save_dirpath":"./experiments",
                        "callbacks": {
                            "dirpath": "./experiments",
                            "save_top_k": 1,
                            "monitor": "val_loss",
                            "mode": "min"
                        }
                    },

    "hyperparameter_tuning": {
                        "batch_size": [32, 64, 128, 256],
                        "conv_channels": [64, 128, 256, 512],
                        "conv_kernel_size": [1, 3, 5],
                        "num_residual_blocks": [1, 2, 3, 4],
                        "lr": [0.0001, 0.001, 0.01]
                    }
}
